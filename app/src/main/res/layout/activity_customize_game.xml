<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout_CustomizeGame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:theme="@android:style/Theme.Black.NoTitleBar"
    android:weightSum="1"
    tools:context=".startgame.CustomizeGameActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/customizegame_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:singleLine="false"
        android:text="@string/customize_game"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30sp"
        android:textStyle="normal"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/image_customize_redline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="#ffff0000" />

    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scrollbarDefaultDelayBeforeFade="700"
        android:requiresFadingEdge="vertical"
        android:scrollbarThumbVertical="@drawable/scrollbar"
        android:scrollbarSize="1dip">

        <LinearLayout
            android:id="@+id/linearlayout_customizeGame"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/CustomizeGame_NamePreset"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="10"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:focusableInTouchMode="false"
                        android:text="@string/CustomizeGame_NameOfPreset"
                        android:textColor="#ffffffff"
                        android:textSize="21sp" />

                    <EditText
                        android:id="@+id/CustomizeGame_EditText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/apptheme_edit_text_holo_dark"
                        android:inputType="text"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <TextView
                    android:id="@+id/CustomizeGame_ConfirmPresetName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/itemingloballist_lwp"
                    android:clickable="true"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="@string/CustomizeGame_SavePreset"
                    android:textColor="#ffffffff"
                    android:textIsSelectable="false"
                    android:textSize="21sp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frameLayout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_number_of_doctor_minus"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_minus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_number_of_doctor"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:autoText="false"
                        android:enabled="true"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/button_number_of_doctor_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_plus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_WithDoctor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:text="@string/number_of_doctor"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_number_of_whore_minus"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_minus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_number_of_whore"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:autoText="false"
                        android:enabled="true"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/button_number_of_whore_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_plus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_WithWhore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/number_of_whore"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/image_customize_whiteline2"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/divider" />

            <FrameLayout
                android:id="@+id/frameLayout3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_number_of_maniac_minus"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_minus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_number_of_maniac"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:autoText="false"
                        android:enabled="true"
                        android:gravity="center_horizontal"
                        android:text="0"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/button_number_of_maniac_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_plus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_WithManiac"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/number_of_maniac"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/divider" />

            <FrameLayout
                android:id="@+id/frameLayout4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_number_of_sheriff_minus"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_minus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_number_of_sheriff"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:autoText="false"
                        android:enabled="true"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/button_number_of_sheriff_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_plus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/number_of_sheriff"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />
            </FrameLayout>

            <ImageView
                android:id="@+id/image_customize_whiteline3"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/divider" />

            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_number_of_godfather_minus"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_minus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_number_of_godfather"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:autoText="false"
                        android:enabled="true"
                        android:gravity="center_horizontal"
                        android:text="1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/button_number_of_godfather_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_plus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_WithGodfather"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/number_of_godfather"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/number_of_mafia"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button_number_of_mafia_minus"
                        android:layout_width="41dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_minus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/text_number_of_mafia"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:autoText="false"
                        android:enabled="true"
                        android:gravity="center_horizontal"
                        android:text="2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/button_number_of_mafia_plus"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/button_plus"
                        android:clickable="true"
                        android:textAlignment="center"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/image_customize_whiteline"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/divider" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="@string/number_of_civilians"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_number_of_civilians_minus"
                            android:layout_width="41dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_minus"
                            android:clickable="true"
                            android:textAlignment="center"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/text_number_of_civilians"
                            android:layout_width="30dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="9"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/button_number_of_civilians_plus"
                            android:layout_width="40dp"
                            android:layout_height="36dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/button_plus"
                            android:clickable="true"
                            android:textAlignment="center"
                            android:textSize="20sp" />
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/divider" />

            <FrameLayout
                android:id="@+id/frameLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="@string/add_another_role"
                    android:textColor="#ffffffff"
                    android:textSize="21sp" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/frameLayout_back_next"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_small_back"
                android:layout_width="120dp"
                android:layout_gravity="left|bottom"
                android:background="@drawable/default_button"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/back"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_dark"
                android:textSize="23sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_height="45dp"/>

            <TextView
                android:id="@+id/button_small_next"
                android:layout_width="120dp"
                android:layout_gravity="bottom|right"
                android:background="@drawable/default_button"
                android:clickable="true"
                android:gravity="center"
                android:text="@string/next"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@android:color/background_dark"
                android:textSize="23sp"
                android:textStyle="bold"
                android:typeface="serif"
                android:layout_marginLeft="10dp"
                android:layout_height="45dp"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#df000000">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffffff"
            android:padding="1px">

            <LinearLayout
                android:layout_width="310dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="#ff000000"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/voting_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:singleLine="false"
                    android:text="@string/voting_voting"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="28sp"
                    android:textStyle="normal"
                    android:typeface="serif" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:background="#ffff0000" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:orientation="horizontal"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center_vertical"
                        android:text="["
                        android:textColor="#ffff0000"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/voting_timerValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center_vertical"
                        android:text="00:00"
                        android:textColor="#ffffffff"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:gravity="center_vertical"
                        android:text="]"
                        android:textColor="#ffff0000"
                        android:textSize="30sp" />

                    <Button
                        android:id="@+id/voting_button_stop"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/button_stop" />

                    <Button
                        android:id="@+id/voting_button_play"
                        android:layout_width="40dp"
                        android:layout_height="36dp"
                        android:layout_gravity="left|center_vertical"
                        android:background="@drawable/button_play" />
                </LinearLayout>

                <ScrollView
                    android:id="@+id/voting_scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_gravity="center_horizontal"
                    android:fillViewport="false">

                    <LinearLayout
                        android:id="@+id/voting_LWP"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:orientation="vertical" />
                </ScrollView>

                <FrameLayout
                    android:id="@+id/layout_skirmish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:clickable="false"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView14"
                            android:layout_width="match_parent"
                            android:layout_height="1px"
                            android:background="@color/ActionBarDivider"/>

                        <LinearLayout
                            android:id="@+id/button_skirmish"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:background="@drawable/itemingloballist_lwp"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="250dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginRight="3dp"
                                android:gravity="center"
                                android:text="@string/voting_skirmish_leftplayer"
                                android:textColor="@color/White"
                                android:textSize="21sp" />

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="40dp"
                                android:layout_height="36dp"
                                android:background="@drawable/pic_del" />
                        </LinearLayout>
                    </LinearLayout>

                </FrameLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#ffff0000" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">

                        <TextView
                            android:id="@+id/voting_cancel"
                            android:layout_width="120dp"
                            android:layout_gravity="left|bottom"
                            android:background="@drawable/default_button"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/cancel"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/background_dark"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_height="45dp"/>

                        <TextView
                            android:id="@+id/voting_ok"
                            android:layout_width="120dp"
                            android:layout_gravity="bottom|right"
                            android:background="@drawable/default_button"
                            android:clickable="true"
                            android:gravity="center"
                            android:text="@string/ok"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/background_dark"
                            android:textSize="23sp"
                            android:textStyle="bold"
                            android:typeface="serif"
                            android:layout_marginLeft="10dp"
                            android:layout_height="45dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </FrameLayout>
    </FrameLayout>

</FrameLayout>